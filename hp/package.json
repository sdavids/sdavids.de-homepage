{
  "name": "sdavids.de-homepage",
  "description": "sdavids.de-homepage",
  "version": "1.0.0",
  "license": "UNLICENSED",
  "contributors": [
    "Sebastian Davids <sdavids@gmx.de>"
  ],
  "homepage": "https://github.com/sdavids/sdavids.de-homepage",
  "bugs": "https://github.com/sdavids/sdavids.de-homepage/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/sdavids/sdavids.de-homepage.git"
  },
  "private": true,
  "type": "module",
  "scripts": {
    "prepare": "scripts/prepare.sh",
    "build": "scripts/build.sh",
    "build:css": "npx --no tailwindcss -- -c ./tailwind.config.cjs -i ./src/s/app.src.css -o ./src/s/app.css -m",
    "clean": "scripts/clean.sh",
    "clean:node": "rm -rf node_modules package-lock.json",
    "compress:files": "scripts/compress-files.sh dist",
    "create:google-verification-file": "scripts/create-google-verification-file.sh dist",
    "create:security-txt-file": "scripts/create-security-txt-file.sh",
    "create:timestamp-file": "scripts/create-timestamp-file.sh",
    "dev": "browser-sync src -f src -b \"google chrome\" --no-notify",
    "dev:css": "npx --no tailwindcss -- -c ./tailwind.config.cjs -i ./src/s/app.src.css -o ./src/s/app.css -w",
    "docker:httpd:start": "scripts/docker-httpd-start.sh --skip-build",
    "docker:httpd:start:with-build": "scripts/docker-httpd-start.sh",
    "docker:httpd:stop": "scripts/docker-httpd-stop.sh",
    "hash:filename": "scripts/hash-filename.sh",
    "lint": "npx --no eslint --cache .",
    "lint:fix": "npm run prettier && npx --no eslint --cache --fix .",
    "minify:html": "scripts/minify-html.sh",
    "minify:xml": "scripts/minify-xml.sh",
    "minify:json": "scripts/minify-json.sh",
    "minify:robots": "scripts/minify-robots.sh",
    "prettier": "npx --no prettier . --cache --write"
  },
  "devDependencies": {
    "@eslint/js": "8.52.0",
    "@rvxlab/tailwind-plugin-ios-full-height": "1.1.0",
    "browser-sync": "2.29.3",
    "browserslist": "4.22.1",
    "esbuild": "0.19.5",
    "eslint": "8.52.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-json": "3.1.0",
    "globals": "13.23.0",
    "html-minifier": "4.0.0",
    "husky": "8.0.3",
    "is-ci": "3.0.1",
    "lint-staged": "15.0.2",
    "minify-xml": "4.0.0",
    "prettier": "3.0.3",
    "prettier-plugin-tailwindcss": "0.5.6",
    "tailwindcss": "3.3.3"
  }
}
