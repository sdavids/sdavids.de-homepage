{
  "name": "sdavids.de-homepage",
  "description": "sdavids.de-homepage",
  "version": "1.0.0",
  "license": "Apache-2.0",
  "contributors": [
    "Sebastian Davids <sdavids@gmx.de>"
  ],
  "homepage": "https://github.com/sdavids/sdavids.de-homepage",
  "bugs": "https://github.com/sdavids/sdavids.de-homepage/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/sdavids/sdavids.de-homepage.git"
  },
  "private": true,
  "type": "module",
  "scripts": {
    "preinstall": "scripts/preinstall.sh",
    "prepare": "scripts/prepare.sh",
    "build": "scripts/build.sh",
    "build:css": "npx --no tailwindcss -- -c ./tailwind.config.cjs -i ./src/s/app.src.css -o ./src/s/app.css -m",
    "clean": "scripts/clean.sh",
    "clean:node": "rm -rf node_modules package-lock.json",
    "compress:files": "scripts/compress-files.sh dist",
    "create:ca": "scripts/create-ca.sh",
    "create:google-verification-file": "scripts/create-google-verification-file.sh dist",
    "create:htaccess": "scripts/create-htaccess.sh",
    "create:security-txt-file": "scripts/create-security-txt-file.sh",
    "create:timestamp-file": "scripts/create-timestamp-file.sh",
    "dev": "browser-sync src -f src -b \"polypane\" --no-notify --no-ghost-mode",
    "dev:css": "npx --no tailwindcss -- -c ./tailwind.config.cjs -i ./src/s/app.src.css -o ./src/s/app.css -w",
    "docker:httpd:logs": "scripts/docker-httpd-logs.sh",
    "docker:httpd:start": "scripts/docker-httpd-start.sh --skip-build",
    "docker:httpd:start:with-build": "scripts/create-or-renew-cert.sh && scripts/docker-httpd-start.sh",
    "docker:httpd:stop": "scripts/docker-httpd-stop.sh",
    "hash:filename": "scripts/hash-filename.sh",
    "hash:importmap": "node scripts/update-importmap-hash-in-htaccess.mjs dist/index.html dist/.htaccess",
    "legal:robots": "scripts/add-legal-notice-to-robots.sh",
    "lint": "npx --no eslint -- --cache --ext js,mjs .",
    "lint:fix": "npm run prettier && npx --no eslint -- --cache --ext js,mjs --fix .",
    "minify:html": "scripts/minify-html.sh",
    "minify:importmap": " node scripts/minify-importmap.mjs dist/index.html",
    "minify:xml": "scripts/minify-xml.sh",
    "minify:json": "scripts/minify-json.sh",
    "minify:robots": "scripts/minify-robots.sh",
    "prettier": "npx --no prettier -- --cache --write .",
    "prettier:check": "npx --no prettier -- --cache --check ."
  },
  "packageManager": "npm@10.2.4",
  "engines": {
    "node": ">= 18.12",
    "npm": ">=9"
  },
  "devDependencies": {
    "@commitlint/cli": "18.4.3",
    "@commitlint/config-conventional": "18.4.3",
    "@eslint/js": "8.55.0",
    "@rvxlab/tailwind-plugin-ios-full-height": "1.1.0",
    "browser-sync": "2.29.3",
    "browserslist": "4.22.1",
    "dom-serializer": "2.0.0",
    "domutils": "3.1.0",
    "esbuild": "0.19.8",
    "eslint": "8.55.0",
    "eslint-plugin-compat": "4.2.0",
    "eslint-plugin-json": "3.1.0",
    "globals": "13.23.0",
    "html-minifier-terser": "7.2.0",
    "htmlparser2": "9.0.0",
    "husky": "8.0.3",
    "is-ci": "3.0.1",
    "lint-staged": "15.1.0",
    "minify-xml": "4.2.0",
    "prettier": "3.1.0",
    "prettier-plugin-tailwindcss": "0.5.7",
    "tailwindcss": "3.3.5"
  }
}
