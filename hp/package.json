{
  "name": "sdavids.de-homepage",
  "description": "sdavids.de-homepage",
  "version": "1.0.0",
  "license": "Apache-2.0",
  "contributors": [
    "Sebastian Davids <sdavids@gmx.de>"
  ],
  "homepage": "https://github.com/sdavids/sdavids.de-homepage",
  "repository": {
    "type": "git",
    "url": "https://github.com/sdavids/sdavids.de-homepage.git"
  },
  "private": true,
  "type": "module",
  "scripts": {
    "prepare": "cd .. && node hp/.husky/install.mjs",
    "build": "scripts/build.sh",
    "build:css": "scripts/build_css.sh",
    "build:dist": "scripts/build_dist.sh",
    "build:dist:skip-install": "scripts/build_dist.sh -s",
    "check:types": "tsc --project jsconfig.prod.json",
    "cert:ca:copy-root": "scripts/copy_ca_root_cert.sh -d certs",
    "cert:ca:create": "scripts/create_ca.sh",
    "cert:ca:delete": "scripts/delete_ca.sh",
    "cert:copy": "scripts/copy_ca_based_cert.sh -d certs -c httpd.internal",
    "cert:create": "scripts/create_ca_based_cert.sh -d certs -c httpd.internal",
    "cert:delete": "scripts/delete_ca_based_cert.sh -d certs -c httpd.internal",
    "cert:renew": "scripts/renew_ca_based_cert.sh -d certs -c httpd.internal",
    "cert:verify": "scripts/verify_ca_based_cert.sh -d certs -c httpd.internal",
    "clean": "scripts/clean.sh",
    "compress:files": "scripts/compress_files.sh dist",
    "create:google-verification-file": "scripts/create_google_verification_file.sh dist",
    "create:htaccess": "scripts/create_htaccess.sh",
    "create:security-txt-file": "scripts/create_security_txt_file.sh",
    "create:timestamp-file": "scripts/create_timestamp_file.sh dist/.deploy-timestamp",
    "dev": "scripts/dev.sh",
    "dev:css": "scripts/dev_css.sh",
    "docker:httpd:logs": "scripts/docker_httpd_logs.sh",
    "docker:httpd:remove": "scripts/docker_httpd_remove.sh",
    "docker:httpd:sh": "scripts/docker_httpd_sh.sh",
    "docker:httpd:start": "scripts/docker_httpd_start.sh -d -s",
    "docker:httpd:start:with-build": "scripts/docker_httpd_start.sh -d",
    "docker:httpd:stop": "scripts/docker_httpd_stop.sh",
    "playwright": "scripts/playwright.sh",
    "playwright:ci": "scripts/playwright_ci.sh",
    "playwright:failed": "scripts/playwright_failed.sh",
    "playwright:report": "scripts/playwright_show_report.sh",
    "playwright:smoke": "scripts/playwright_smoke.sh",
    "playwright:snapshots:update": "scripts/playwright_update_snapshots.sh",
    "playwright:trace": "scripts/playwright_trace.sh",
    "playwright:ui": "scripts/playwright_ui.sh",
    "format": "prettier --plugin=@prettier/plugin-xml --cache --write .",
    "format:check": "prettier --plugin=@prettier/plugin-xml --cache --check .",
    "hash:css": "node scripts/hash_and_update_files.mjs dist css html",
    "hash:filename": "scripts/hash_filename.sh",
    "hash:importmap": "node scripts/update_importmap_hash_in_htaccess.mjs dist/index.html dist/.htaccess",
    "hash:js": "node scripts/hash_and_update_files.mjs dist js html",
    "hash:svg": "node scripts/hash_and_update_files.mjs dist svg css,js,html",
    "legal:robots": "scripts/add_legal_notice_to_robots.sh",
    "lint": "eslint --cache --cache-location node_modules/.cache/eslint/ --max-warnings 0 .",
    "lint:fix": "eslint --cache --cache-location node_modules/.cache/eslint/ --fix .",
    "lhci": "lhci autorun",
    "lhci:ci": "lhci autorun --config lighthouserc.ci.yaml",
    "minify:html": "scripts/minify_html.sh dist",
    "minify:json-tags": "node scripts/minify_json_tags.mjs dist/index.html",
    "minify:robots": "scripts/minify_robots.sh dist",
    "minify:svg": "scripts/minify_svg.sh dist",
    "minify:traffic-advice": "scripts/minify_traffic_advice.sh dist/.well-known/traffic-advice",
    "minify:webmanifest": "scripts/minify_webmanifest.sh dist/site.webmanifest",
    "minify:json": "scripts/minify_json.sh dist",
    "minify:xml": "scripts/minify_xml.sh dist",
    "start": "http-server dist --port 3000 --gzip --brotli --cors --utc --no-dotfiles",
    "test": "vitest run",
    "test:ci": "vitest run --reporter default --reporter json --outputFile reports/vitest/test-output.json",
    "test:verbose": "vitest run --reporter verbose",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "@axe-core/playwright": "4.11.0",
    "@eslint/css": "0.14.1",
    "@eslint/js": "9.37.0",
    "@eslint/json": "0.13.2",
    "@lhci/cli": "0.15.1",
    "@playwright/test": "1.57.0",
    "@prettier/plugin-xml": "3.4.2",
    "@tailwindcss/cli": "4.1.14",
    "@testing-library/dom": "10.4.1",
    "@testing-library/jest-dom": "6.9.1",
    "@types/node": "22.18.10",
    "@vitest/eslint-plugin": "1.3.17",
    "browser-sync": "3.0.4",
    "browserslist": "4.28.0",
    "dom-serializer": "2.0.0",
    "domutils": "3.2.2",
    "esbuild": "0.27.0",
    "eslint": "9.37.0",
    "eslint-plugin-compat": "6.0.2",
    "eslint-plugin-depend": "1.4.0",
    "eslint-plugin-import-x": "4.16.1",
    "eslint-plugin-jest-dom": "5.5.0",
    "eslint-plugin-playwright": "2.4.0",
    "eslint-plugin-testing-library": "7.13.5",
    "globals": "16.5.0",
    "happy-dom": "20.0.11",
    "html-minifier-terser": "7.2.0",
    "htmlparser2": "10.0.0",
    "http-server": "14.1.1",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "minify-xml": "4.5.2",
    "prettier": "3.7.3",
    "prettier-plugin-tailwindcss": "0.6.14",
    "svgo": "4.0.0",
    "tailwindcss": "4.1.14",
    "tailwind-csstree": "0.1.4",
    "typescript": "5.8.3",
    "vitest": "3.2.4"
  },
  "browserslist": [
    "baseline 2022"
  ],
  "browserslist-config-baseline": {
    "baselineYear": 2022
  },
  "packageManager": "pnpm@10.18.2",
  "devEngines": {
    "runtime": {
      "name": "node",
      "version": ">= 22.19"
    },
    "packageManager": {
      "name": "pnpm",
      "version": "10.18.2"
    }
  }
}
